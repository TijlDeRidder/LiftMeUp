@model IEnumerable<LiftMeUp.Models.Melding>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MeldingId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.liftId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.startDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.uitleg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDeleted)
            </th>
            <th></th>
        </tr>
        <form method="get" asp-action="Index" asp-controller="Meldings">
        <tr>
            <th>
                <input type="number" name="MeldingId" class="form-control" value=@ViewData["MeldingId"] onchange="$(this.form).submit();" />
            </th>
            <th>
                <input type="text" name="liftId" class="form-control" value="@ViewData["LiftId"]" onchange="$(this.form).submit()" />
            </th>
            <th>
                <input type="number" name="stationId" class="form-control" value=@ViewData["stationId"] onchange="$(this.form).submit();" />
            </th>
            <th></th>
            <th>
                <input type="text" name="uitleg" class="form-control" value="@ViewData["uitleg"]" onchange="$(this.form).submit();" />
            </th>
            <th>
                <input type="text" name="userId" class="form-control" value="@ViewData["userId"]" onchange="$(this.form).submit();" />
            </th>
        </tr>
        </form>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MeldingId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.liftId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.startDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.uitleg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.isDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MeldingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MeldingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MeldingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
