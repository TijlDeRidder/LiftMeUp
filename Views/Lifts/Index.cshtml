@model IEnumerable<LiftMeUp.Models.Lift>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.liftId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isWorking)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isDeleted)
            </th>
            <th></th>
        </tr>
        <form method="get" asp-action="Index" asp-controller="Lifts">
        <tr>
            <th>
                <input type="number" name="liftId" class="form-control" value=@ViewData["liftId"] onchange="$(this.form).submit();" />
            </th>
            <th>
                <input type="text" name="liftNaam" class="form-control" value="@ViewData["liftNaam"]" onchange="$(this.form).submit()" />
            </th>
            <th>
                <input type="number" name="stationId" class="form-control" value=@ViewData["stationId"] onchange="$(this.form).submit();" />
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        </form>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.liftId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isWorking)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isDeleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.liftId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.liftId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.liftId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
